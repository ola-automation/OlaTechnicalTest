<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="BJSS Technical Test - Functional Testcases">

	<listeners>

		<listener class-name="com.bjss.listeners.CustomListeners" />
		<listener class-name="com.bjss.errorcollectors.TestListenerAdapter" />
		<listener class-name="org.uncommons.reportng.HTMLReporter" />
		<listener class-name="org.uncommons.reportng.JUnitXMLReporter" />

	</listeners>


	<test name="Purchase Item Test">
		<classes>
			<class name="com.bjss.testcases.functional.PurchaseItemTest" />
		</classes>
	</test>

	<test name="Review Order And Add Comment Test">
		<classes>
			<class name="com.bjss.testcases.functional.ReviewOrderAddCommentTest" />
		</classes>
	</test>

	<test name="Capture Screenshot Test">
		<classes>
			<class name="com.bjss.testcases.functional.CaptureScreenshotAfterFailTest" />
		</classes>
	</test>


</suite> 
